<!DOCTYPE html>
<html>
  <head>
    <title>Opus</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <nav>
      <% if user_signed_in? %>
        <p>Welcome, Foo! | <%= link_to 'Logout', destroy_user_session_path, method: "delete" %></p>
      <% else %>
        <p><%= link_to 'Login', new_user_session_path %> | <%= link_to 'Sign Up', new_user_registration_path%>
      <% end %>
    </nav>
    <%= yield %>
  </body>
</html>
